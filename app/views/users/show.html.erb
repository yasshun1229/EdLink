<div class="row">
  <aside class="col-sm-4">
    <div class="card">
      <div class="card-header">
        <h3 class="card-title"><%= @user.name %></h3>
      </div>
      <div class="card-body">
        <img class="rounded img-fluid" src="<%= gravatar_url(@user, { size: 500 }) %>" alt="">
      </div>
    </div>
  </aside>
  <div class="col-sm-8">
    <table class="table">
      <tr>
        <td>名称</td>
        <td><%= @user.name %></td>
      </tr>
      
      <tr>
        <td>所在地</td>
        <td><%= @user.address %></td>
      </tr>
      
      <tr>
        <td>Webサイト</td>
        <td><%= @user.web_site %></td>
      </tr>
      
    </table>
  </div>
</div>

<a href="<%= @user.email %>" class="btn btn-primary">お問い合わせ</a>